<header class="d-flex header-container">
  <div class="date-container">
    <div class="today-container">
      <%= Time.now.strftime("%B %d, %Y %H:%M") %>
    </div>
  </div>

  <div class="videocall-container">
    <i class="fa-solid fa-video px-2"></i>
    <div class="video-caller px-2">
      <a href="https://zoom.us/signin#/login" target="_blank" class="zoom-style">ZOOMcall</a>
    </div>

    <div class="search-contacts-container px-2">
      <i class="search-icon fa-solid fa-magnifying-glass px-2"></i>
      <div class="search-contacts">
      <a href="https://us05web.zoom.us/user/personalContact#/" target="_blank" class="contact-style">Contacts</a>
      </div>
    </div>
  </div>

  <div class="login-details">
    <p class="text-center">Logged in as: <%= current_user.first_name %> <%= current_user.last_name %>   <div class="user">
    <%= image_tag(("user.png") , :class => "user-img") %>
    <div></p>
  </div>
</header>
