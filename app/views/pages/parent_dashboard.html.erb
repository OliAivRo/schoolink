<div class="parent-second-container d-flex flex-column">
  <div class="d-flex align-items-baseline justify-content-evenly mb-4">

    <!-- CALENDAR -->
    <div class="parent-card-timetable">
      <div>
        <h3 class="subtitles">Timetable</h3>
      </div>
      <div class="card-body calendar-parent">
        <%= render 'sections/parent_calendar' %>
      </div>
    </div>

    <!-- ANNOUNCEMENTS -->
    <div class="parent-card-annoucement" style="border: 0px !important;">
      <div>
        <h3 class="subtitles">Announcements</h3>
      </div>
      <div class="card gradient-background box-shadow-parent">
        <div class="card-body" style="max-width:400px">
          <%= render 'sections/parent_announcements' %>
        </div>
      </div>
    </div>

  </div>

  <!-- CHARTS -->
  <div class="container d-flex flex-column">
    <div class="row d-flex align-items-baseline justify-content-center mb-4" data-controller="display-charts" data-display-charts-gradesavg-value="<%= @grades_for_charts.to_json %>">
      <div class="col-md-5 p-2 card graph-background align-self-end">
        <div class="card-body">
          <canvas id="myBarChart" data-display-charts-target="bar"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>
