    options: {
      // Additional options can be added here to customize the chart
    }
  });
});

document.addEventListener('DOMContentLoaded', function() {
  var ctx = document.getElementById('myBarChart').getContext('2d');
  var myBarChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['January', 'February', 'March', 'April', 'May'], // Labels for the x-axis
      datasets: [{
        label: 'Sales',
        data: [50, 60, 70, 80, 90], // Data points for the dataset
        backgroundColor: [
          'rgba(255, 99, 132, 0.2)',
          'rgba(54, 162, 235, 0.2)',
          'rgba(255, 206, 86, 0.2)',
          'rgba(75, 192, 192, 0.2)',
          'rgba(153, 102, 255, 0.2)'
