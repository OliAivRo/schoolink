<h2><%= @chatroom.name %></h2>

<div id="messages">
  <% @messages.each do |message| %>
    <p>
      <strong><%= message.user.first_name %>:</strong>
      <%= message.content %>
    </p>
  <% end %>
</div>

<%= form_for [@chatroom, @message] do |f| %>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Send" %>
  </div>
<% end %>
