
<div class="show-classes-container">
  <div class="cards-container">
    <h2>All your classes </h2>
    <div id="top-cards-dashboard">
      <% @sections.each do |section| %>
        <%= link_to section_path(section) do %>
        <%= render 'sections/grades_small', section: section %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="show-table-container">
  <div class="tabs">
    <!-- Tabs for navigation -->
    <a href="/timetable">Timetable</a>
    <a href="/personal_infos">Personal infos</a>
    <a href="/students">Students</a>
    <a href="/add_grades">Add grades</a>
  </div>

  <!-- Search bar -->
  <div class="search-bar">
    <input type="text" placeholder="Search">
  </div>

  <!-- Student list -->
<div class="student-list">
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Parent Name</th>
        <th>Phone Number</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td class="parent-contact"><%= student.parent&.first_name %> <%= student.parent&.last_name %> <i class="fa-solid fa-envelope"></i><i class="fa-solid fa-phone"></i></td>
          <td><%= student.parent.phone_number %></td>
          <td><%= student.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

</div>
</div>
