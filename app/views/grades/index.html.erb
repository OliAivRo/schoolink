
<div class="show-classes-container">
  <div class="cards-container">
    <h2><%=@student.first_name%>'s Grades</h2>
  </div>
  <div class="show-table-container">
    <div class="tabs">
      <!-- Exemple pour Classroom Students (Assumant que c'est la page index des sections) -->
      <h4>Class : <%=@section.name%></h4>
    </div>


    <!-- Student list -->
    <div class="student-list">
      <table>
        <thead>
          <tr>
            <th>Course Name</th>
            <th>Grade 1</th>
            <th>Grade 2</th>
            <th>Grade 3</th>
            <th>Grade 4</th>
            <th>Grade 5</th>
            <th>Grade 6</th>
          </tr>
        </thead>

        <tbody>
          <% @grades_by_course.each do |course, grades| %>
            <tr>
              <td><%= course.name %></td>
              <% grades.each do |grade| %>
                <td><%= grade.grade%></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>
